extends layout

block content
  div(class="container mx-auto px-4 py-6")
    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-3")
        div(class="mb-6")
          h1(class="text-2xl md:text-3xl font-bold text-gray-900 mb-2") Anime Ongoing
          p(class="text-gray-600") Daftar anime yang sedang tayang dengan subtitle Indonesia

        if animeList && animeList.length > 0
          div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 mb-8")
            each anime in animeList
              div(class="anime-card bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md")
                a(href=`/anime/${anime.slug}`)
                  div(class="relative")
                    img(src=anime.poster alt=anime.title class="w-full h-48 object-cover" onerror="this.onerror=null;this.src='https://placehold.co/400x300?text=No+Image';")
                    if anime.current_episode
                      div(class="absolute top-2 left-2 bg-primary-600 text-white text-xs px-2 py-1 rounded")= anime.current_episode
                    if anime.newest_release_date
                      div(class="absolute top-2 right-2 bg-black bg-opacity-70 text-white text-xs px-2 py-1 rounded")= anime.newest_release_date
                  div(class="p-3")
                    h3(class="font-medium text-sm text-gray-900 line-clamp-2 mb-1")= anime.title
                    if anime.release_day
                      p(class="text-xs text-gray-500")= anime.release_day

          if pagination && pagination.last_visible_page > 0
            nav(class="flex justify-center")
              div(class="flex items-center space-x-2")
                if pagination.current_page > 1
                  a(href=`/ongoing?page=${pagination.current_page - 1}` class="px-3 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors") Sebelumnya
                
                each page in Array.from({length: Math.min(5, pagination.last_visible_page)}, (_, i) => {const start = Math.max(1, pagination.current_page - 2);return start + i;}).filter(p => p <= pagination.last_visible_page)
                  if page === pagination.current_page
                    span(class="px-3 py-2 bg-primary-600 text-white rounded")= page
                  else
                    a(href=`/ongoing?page=${page}` class="px-3 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors")= page
                
                if pagination.current_page < pagination.last_visible_page
                  a(href=`/ongoing?page=${pagination.next_page}` class="px-3 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors") Selanjutnya

        else
          div(class="text-center py-12")
            svg(class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
            h3(class="text-lg font-medium text-gray-900 mb-2") Tidak ada anime ongoing
            p(class="text-gray-600") Belum ada data anime ongoing yang tersedia

        if adSlots && adSlots.contentBottom && adSlots.contentBottom.length > 0
          div(class="mb-6")
            each ad in adSlots.contentBottom
              div(class="ad-slot bg-gray-100 rounded-lg")!= ad.content

      div(class="lg:col-span-1")
        if adSlots && adSlots.sidebarTop && adSlots.sidebarTop.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarTop
              div(class="ad-slot bg-gray-100 rounded-lg")!= ad.content

        div(class="bg-white rounded-lg shadow-sm p-6 mb-6")
          h3(class="font-bold text-gray-900 mb-4") Menu Cepat
          div(class="space-y-3")
            a(href="/" class="flex items-center text-gray-600 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6")
              span Beranda
            a(href="/complete" class="flex items-center text-gray-600 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Complete
            a(href="/genres" class="flex items-center text-gray-600 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
              span Genre Anime

        if adSlots && adSlots.sidebarBottom && adSlots.sidebarBottom.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarBottom
              div(class="ad-slot bg-gray-100 rounded-lg")!= ad.content
