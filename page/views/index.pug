extends layout

block content
  div(class="container mx-auto px-4 py-6")
    section(class="mb-8")
      div(class="bg-gradient-to-r from-primary-600 to-primary-800 rounded-xl p-8 text-white")
        div(class="max-w-2xl")
          h1(class="text-3xl md:text-4xl font-bold mb-4") Selamat Datang di KitaNime
          p(class="text-lg opacity-90 mb-6") Platform streaming anime subtitle Indonesia terlengkap. Nikmati ribuan anime berkualitas tinggi dengan subtitle Indonesia yang akurat.
          div(class="flex flex-wrap gap-4")
            a(href="/ongoing" class="bg-white text-primary-600 px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors") Anime Ongoing
            a(href="/complete" class="border border-white text-white px-6 py-3 rounded-lg font-medium hover:bg-white hover:text-primary-600 transition-colors") Anime Complete

    div(class="grid grid-cols-1 lg:grid-cols-4 gap-8")
      div(class="lg:col-span-3")
        if ongoingAnime && ongoingAnime.length > 0
          section(class="mb-8")
            div(class="flex items-center justify-between mb-6")
              h2(class="text-2xl font-bold text-gray-900") Anime Ongoing Terbaru
              a(href="/ongoing" class="text-primary-600 hover:text-primary-700 font-medium flex items-center")
                span Lihat Semua
                svg(class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
            
            div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4")
              each anime in ongoingAnime.slice(0, 12)
                div(class="anime-card bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md")
                  a(href=`/anime/${anime.slug}`)
                    div(class="relative")
                      img(src=anime.poster alt=anime.title class="w-full h-48 object-cover" onerror="this.onerror=null;this.src='https://placehold.co/400x300?text=No+Image';")
                      if anime.current_episode
                        div(class="absolute top-2 left-2 bg-primary-600 text-white text-xs px-2 py-1 rounded")= anime.current_episode
                      if anime.newest_release_date
                        div(class="absolute top-2 right-2 bg-black bg-opacity-70 text-white text-xs px-2 py-1 rounded")= anime.newest_release_date
                    div(class="p-3")
                      h3(class="font-medium text-sm text-gray-900 line-clamp-2 mb-1")= anime.title
                      if anime.release_day
                        p(class="text-xs text-gray-500")= anime.release_day

        if completeAnime && completeAnime.length > 0
          section(class="mb-8")
            div(class="flex items-center justify-between mb-6")
              h2(class="text-2xl font-bold text-gray-900") Anime Complete Terbaru
              a(href="/complete" class="text-primary-600 hover:text-primary-700 font-medium flex items-center")
                span Lihat Semua
                svg(class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
            
            div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4")
              each anime in completeAnime.slice(0, 12)
                div(class="anime-card bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md")
                  a(href=`/anime/${anime.slug}`)
                    div(class="relative")
                      img(src=anime.poster alt=anime.title class="w-full h-48 object-cover" onerror="this.onerror=null;this.src='https://placehold.co/400x300?text=No+Image';")
                      div(class="absolute top-2 left-2 bg-green-600 text-white text-xs px-2 py-1 rounded") Complete
                      if anime.rating
                        div(class="absolute top-2 right-2 bg-black bg-opacity-70 text-white text-xs px-2 py-1 rounded flex items-center")
                          svg(class="w-3 h-3 mr-1 text-yellow-400" fill="currentColor" viewBox="0 0 20 20")
                            path(d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z")
                          span= anime.rating
                    div(class="p-3")
                      h3(class="font-medium text-sm text-gray-900 line-clamp-2 mb-1")= anime.title
                      if anime.status
                        p(class="text-xs text-gray-500")= anime.status

        if adSlots && adSlots.contentBottom && adSlots.contentBottom.length > 0
          section(class="mb-8")
            each ad in adSlots.contentBottom
              div(class="ad-slot bg-gray-100 rounded-lg")!= ad.content

      div(class="lg:col-span-1")
        if adSlots && adSlots.sidebarTop && adSlots.sidebarTop.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarTop
              div(class="ad-slot bg-gray-100 rounded-lg")!= ad.content

        div(class="bg-white rounded-lg shadow-sm p-6 mb-6")
          h3(class="font-bold text-gray-900 mb-4") Menu Cepat
          div(class="space-y-3")
            a(href="/ongoing" class="flex items-center text-gray-600 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Ongoing
            a(href="/complete" class="flex items-center text-gray-600 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z")
              span Anime Complete
            a(href="/genres" class="flex items-center text-gray-600 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z")
              span Genre Anime
            a(href="/search" class="flex items-center text-gray-600 hover:text-primary-600 transition-colors")
              svg(class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z")
              span Pencarian Anime

        div(class="bg-white rounded-lg shadow-sm p-6 mb-6")
          h3(class="font-bold text-gray-900 mb-4") Genre Populer
          div(class="flex flex-wrap gap-2")
            each genre in []
              a(href=`/genres/${genre.toLowerCase()}` class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full hover:bg-primary-100 hover:text-primary-700 transition-colors")= genre

        if adSlots && adSlots.sidebarBottom && adSlots.sidebarBottom.length > 0
          div(class="mb-6")
            each ad in adSlots.sidebarBottom
              div(class="ad-slot bg-gray-100 rounded-lg")!= ad.content

        div(class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-lg p-6")
          h3(class="font-bold text-primary-900 mb-3") Tentang KitaNime
          p(class="text-primary-800 text-sm leading-relaxed") Platform streaming anime terlengkap dengan subtitle Indonesia berkualitas tinggi. Nikmati pengalaman menonton anime yang tak terlupakan.

block scripts
  script.
    if ('IntersectionObserver' in window) {
      const imageObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const img = entry.target;
            img.src = img.dataset.src;
            img.classList.remove('lazy');
            imageObserver.unobserve(img);
          }
        });
      });

      document.querySelectorAll('img[data-src]').forEach(img => {
        imageObserver.observe(img);
      });
    }

    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth'
        });
      });
    });
