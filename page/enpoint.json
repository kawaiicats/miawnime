[
  {
    "endpoint": "/v1/home",
    "method": "GET",
    "params": [],
    "description": "Returns latest ongoing anime update and currently finished anime resources",
    "example": "/v1/home"
  },
  {
    "endpoint": "/v1/ongoing-anime/:page",
    "method": "GET",
    "params": [
      {
        "name": "page",
        "required": false,
        "type": "number",
        "description": "Page number for pagination"
      }
    ],
    "description": "Returns ongoing anime resources",
    "example": "/v1/ongoing-anime"
  },
  {
    "endpoint": "/v1/complete-anime/:page",
    "method": "GET",
    "params": [
      {
        "name": "page",
        "required": false,
        "type": "number",
        "description": "Page number for pagination"
      }
    ],
    "description": "Returns finished anime resources",
    "example": "/v1/complete-anime/10"
  },
  {
    "endpoint": "/v1/search/:keyword",
    "method": "GET",
    "params": [
      {
        "name": "keyword",
        "required": true,
        "type": "string",
        "description": "Keyword to search for anime"
      }
    ],
    "description": "Returns anime search results for the given keyword",
    "example": "/v1/search/Hibike%20Euphonium"
  },
  {
    "endpoint": "/v1/anime/:slug",
    "method": "GET",
    "params": [
      {
        "name": "slug",
        "required": true,
        "type": "string",
        "description": "Unique slug to get single anime resource"
      }
    ],
    "description": "Returns single anime resource",
    "example": "/v1/anime/kuzu-honkai-subtitle-indonesia"
  },
  {
    "endpoint": "/v1/anime/:slug/episodes",
    "method": "GET",
    "params": [
      {
        "name": "slug",
        "required": true,
        "type": "string",
        "description": "Unique slug to get anime episode lists"
      }
    ],
    "description": "Returns anime episode lists resource (the /anime/:slug endpoint also returns the episode lists)",
    "example": "/v1/anime/kuzu-honkai-subtitle-indonesia/episodes"
  },
  {
    "endpoint": "/v1/anime/:slug/episodes/:episode",
    "method": "GET",
    "params": [
      {
        "name": "slug",
        "required": true,
        "type": "string",
        "description": "Anime slug"
      },
      {
        "name": "episode",
        "required": true,
        "type": "number",
        "description": "Episode number"
      }
    ],
    "description": "Returns episode resource with stream URL and download URLs",
    "example": "/v1/anime/kuzu-honkai-subtitle-indonesia/episodes/1"
  },
  {
    "endpoint": "/v1/episode/:slug",
    "method": "GET",
    "params": [
      {
        "name": "slug",
        "required": true,
        "type": "string",
        "description": "Episode slug"
      }
    ],
    "description": "Returns single episode data by the episode's slug",
    "example": "/v1/episode/kzhnkai-episode-1-sub-indo"
  },
  {
    "endpoint": "/v1/genres",
    "method": "GET",
    "params": [],
    "description": "Returns genre lists resource",
    "example": "/v1/genres"
  },
  {
    "endpoint": "/v1/genres/:slug",
    "method": "GET",
    "params": [
      {
        "name": "slug",
        "required": true,
        "type": "string",
        "description": "Genre slug"
      }
    ],
    "description": "Returns anime lists by the genre's slug",
    "example": "/v1/genres/sports"
  }
]
